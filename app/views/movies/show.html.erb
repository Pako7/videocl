<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('movie.title') %>:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong><%= t('movie.image') %>:</strong>
  <%= image_tag @movie.image.url(:medium) %>
</p>

<p>
  <strong><%= t('movie.synopsis') %>:</strong>
  <%= @movie.synopsis %>
</p>

<p>
  <strong><%= t('movie.rent_price') %>:</strong>
  <%= @movie.rent_price %>
</p>

<p>
  <strong><%= t('movie.is_rented') %>:</strong>
  <%= @movie.is_rented %>
</p>


<td><%= link_to t('movie.delete'), @movie, method: :delete, data: { confirm: t('are_you_sure') }, class: 'btn btn-danger' %></td>
<%= link_to t(:edit), edit_movie_path(@movie), {class: 'btn btn-info'} %>
<%= link_to t(:back), movies_path, {class: 'btn btn-default'} %>
<%= link_to t('movie.new'), new_movie_path, {class: 'btn btn-default'} %>
